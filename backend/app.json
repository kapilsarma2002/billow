{
  "name": "billow-backend",
  "description": "Billow Backend API",
  "repository": "https://github.com/kapilsarma2002/billow/backend",
  "keywords": ["go", "fiber", "postgres", "api"],
  "env": {
    "DATABASE_URL": {
      "description": "PostgreSQL database URL",
      "required": true
    },
    "PORT": {
      "description": "Port to run the server on",
      "value": "8080"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:mini"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/go"
    }
  ]
} 